root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.scss]
indent_style = tab

[*.css]
indent_style = tab

[*.js]
indent_style = tab

[*.py]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.jade]
indent_style = tab
trim_trailing_whitespace = false

[*.html]
indent_style = tab

[*.json]
indent_style = tab

[package.json]
indent_style = space
indent_size = 2
